FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;


//Parameters for cylindrical mesh
radius      0.628;
radiusNeg  -0.628;
box         0.15;
boxNeg     -0.15;
zMax        2.3;
zMin       -2.3;

nR          7;
nZ          15;

geometry
{
    cylinder
    {
        type      searchableCylinder;
        point1    (0 -1 0);
        point2    (0 1  0);
        radius    $radius;
    }
}

vertices        
(
   (-7.8    -2.30    0.00)//0
   (-7.8     2.30    0.00)//1
   (-7.8     2.30    1.00)//2
   (-7.8    -2.30    1.00)//3

   (-2.90    -2.30    0.00)//4
   (-2.90     2.30    0.00)//5
   (-2.90     2.30    1.00)//6
   (-2.90    -2.30    1.00)//7

   (-1.70    -2.30    0.15)//8
   (-1.70     2.30    0.15)//9
   (-1.70     2.30    1.00)//10
   (-1.70    -2.30    1.00)//11

   ( 0.70    -2.30    0.15)//12
   ( 0.70     2.30    0.15)//13
   ( 0.70     2.30    1.00)//14
   ( 0.70    -2.30    1.00)//15

   ( 4.33    -2.30    0.35)//16
   ( 4.33     2.30    0.35)//17
   ( 4.33     2.30    1.00)//18
   ( 4.33    -2.30    1.00)//19

   ( 7.03    -2.30    0.35)//20
   ( 7.03     2.30    0.35)//21
   ( 7.03     2.30    1.00)//22
   ( 7.03    -2.30    1.00)//23

// vertices for cylinder

    // Inner
    ($boxNeg $boxNeg $zMin) //24
    ($box    $boxNeg $zMin) //25
    ($boxNeg $box    $zMin) //26
    ($box    $box    $zMin) //27

    // Outer block points
    project ($radiusNeg $radiusNeg $zMin) (cylinder) //28
    project ($radius    $radiusNeg $zMin) (cylinder) //29
    project ($radiusNeg $radius    $zMin) (cylinder) //30
    project ($radius    $radius    $zMin) (cylinder) //31

    // Inner
    ($boxNeg $boxNeg $zMax) //32
    ($box    $boxNeg $zMax) //33
    ($boxNeg $box    $zMax) //34
    ($box    $box    $zMax) //35

    // Outer block points
    project ($radiusNeg $radiusNeg $zMax) (cylinder) //36
    project ($radius    $radiusNeg $zMax) (cylinder) //37
    project ($radiusNeg $radius    $zMax) (cylinder) //38
    project ($radius    $radius    $zMax) (cylinder) //39
);

blocks          
(
    hex (0  4  5  1  3  7  6  2)   (40 40 15) simpleGrading (0.5 1 1)
    hex (4  8  9  5  7  11 10 6)   (10 40 15) simpleGrading (0.5 1 1)
    hex (8  12 13 9  11 15 14 10)   (30 40 15) simpleGrading (1 1 1)
    hex (12 16 17 13 15 19 18 14)   (30 40 15) simpleGrading (2 1 1)
    hex (16 20 21 17 19 23 22 18)   (10 40 15) simpleGrading (1 1 1)

//blocks for cylinder
    hex ( 28  29  25  24  36  37  33  32) ($nR $nR $nZ) simpleGrading (1 1 1)
    hex ( 28  24  26  30  36  32  34  38) ($nR $nR $nZ) simpleGrading (1 1 1)
    hex ( 25  29  31  27  33  37  39  35) ($nR $nR $nZ) simpleGrading (1 1 1)
    hex ( 26  27  31  30  34  35  39  38) ($nR $nR $nZ) simpleGrading (1 1 1)
    hex ( 24  25  27  26  32  33  35  34) ($nR $nR $nZ) simpleGrading (1 1 1)
);

edges
(
//edges for cylinder
    project  28  29 (cylinder)
    project  31  29 (cylinder)
    project  30  31 (cylinder)
    project  28  30 (cylinder)
    project  36  37 (cylinder)
    project  37  39 (cylinder)
    project  36  38 (cylinder)
    project  38  39 (cylinder)
);


boundary         
(
    inlet
    {
        type patch;
        faces
        (
            (0 3 2 1)
        );
    }
    outlet
    {
        type patch;
        faces
